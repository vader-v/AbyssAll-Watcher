<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>Teams</h1>
  <div class="form-background">

    <table>
      <thead>
        
        <% teams.forEach((team) => { %>
          <tr>
            <td>
              <a href="./teams/<%= team._id %>">
                <button type="submit">
                  <%= team.name %>
                </button>
              </td>
              <td>
                <form action="/profiles/teams/<%= team._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
                <input type="hidden" name="teamId" value="<%= team._id %>">
              </td>
            </form></a>
          </tr>
          <% }) %>
        </thead>
      </div>
  </main>
      
<%- include('../partials/footer') %>